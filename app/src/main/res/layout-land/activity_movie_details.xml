<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="0dp" />

    <RatingBar
        android:id="@+id/rbVoteAverage"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDetailPoster"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="571dp"
        android:numStars="5"
        android:stepSize="0.5"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="456dp" />

    <TextView
        android:id="@+id/tvDetailOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDetailTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/ivDetailPoster"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/rbVoteAverage"
        tools:layout_editor_absoluteX="163dp" />

    <ImageView
        android:id="@+id/ivDetailPoster"
        android:layout_width="150dp"
        android:layout_height="223dp"
        android:layout_below="@+id/tvDetailTitle"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="-44dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>